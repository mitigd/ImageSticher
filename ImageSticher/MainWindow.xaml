<Window x:Class="ImageStitcher.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ImageStitcher"
        mc:Ignorable="d"
        Title="Simple Image Stitcher" Height="450" Width="800"
        WindowStartupLocation="CenterScreen"
        Background="#f0f0f0">
    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="Side-by-Side Image Stitcher" FontSize="24" FontWeight="Bold" Foreground="#333" HorizontalAlignment="Center" Margin="0,0,0,20"/>

        <!-- Area for Image Previews -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Image 1 Preview -->
            <Border Grid.Column="0" BorderBrush="#ccc" BorderThickness="1" Margin="5" CornerRadius="5" Background="White">
                <Image x:Name="Image1Preview" Stretch="Uniform" />
            </Border>

            <!-- Image 2 Preview -->
            <Border Grid.Column="1" BorderBrush="#ccc" BorderThickness="1" Margin="5" CornerRadius="5" Background="White">
                <Image x:Name="Image2Preview" Stretch="Uniform" />
            </Border>
        </Grid>

        <!-- Buttons for Selecting and Stitching -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,10">
            <Button x:Name="SelectImage1Button" Content="Select First Image" Width="150" Margin="5" Padding="10,5" Click="SelectImage1Button_Click" Background="#007ACC" Foreground="White" BorderThickness="0"/>
            <Button x:Name="SelectImage2Button" Content="Select Second Image" Width="150" Margin="5" Padding="10,5" Click="SelectImage2Button_Click" Background="#007ACC" Foreground="White" BorderThickness="0"/>
            <Button x:Name="StitchImagesButton" Content="Stitch Images" Width="150" Margin="20,5,5,5" Padding="10,5" Click="StitchImagesButton_Click" FontWeight="Bold" Background="#28A745" Foreground="White" BorderThickness="0"/>
        </StackPanel>

        <!-- Status Bar -->
        <StatusBar Grid.Row="3" VerticalAlignment="Bottom">
            <StatusBarItem>
                <TextBlock x:Name="StatusText" Text="Please select two images."/>
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Window>
